<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.Farmai" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your dark theme here. -->
    <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
  </style>

  <style name="Base.Theme.Farmai.newbar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#FAFBF9</item> <!-- Change to black color -->
    <item name="android:background">#000000</item> <!-- Set the background color -->
    <item name="titleTextColor">#FFFFFF</item>
    <item name="itemTextColor">#FFFFFF</item>
    <item name="windowNoTitle">true</item>
    <item name="itemFillColor">#FFFFFF</item>
  </style>

  <style name="BottomNavTheme" parent="Widget.Design.BottomNavigationView">
    <item name="android:background">#FAFBF9</item> <!-- Set the background color to black -->
    <item name="itemTextColor">@color/white</item> <!-- Set the text color to white for unselected items -->
    <item name="itemIconTint">@color/white</item> <!-- Set the icon color to white for unselected items -->

  </style>




</resources>