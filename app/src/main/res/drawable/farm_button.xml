<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background: Green Field with Rounded Corners -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#8BC34A" /> <!-- Green Color -->
                    <corners android:radius="24dp" /> <!-- Adjusted Corner Radius -->
                </shape>
            </item>
            <!-- Barn Icon (You can use your own barn icon) -->

            <!-- Text Label -->
            <item android:right="64dp" android:left="64dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White Color -->
                    <corners android:radius="24dp" /> <!-- Adjusted Corner Radius -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default Button State -->
    <item>
        <layer-list>
            <!-- Background: Green Field with Rounded Corners -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#4CAF50" /> <!-- Slightly darker green color -->
                    <corners android:radius="24dp" /> <!-- Adjusted Corner Radius -->
                </shape>
            </item>
            <!-- Barn Icon (You can use your own barn icon) -->

            <!-- Text Label -->
            <item android:right="16dp" android:left="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- White Color -->
                    <corners android:radius="24dp" /> <!-- Adjusted Corner Radius -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
